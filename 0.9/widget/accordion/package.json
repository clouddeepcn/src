            "options": {
                "multiple": false
            },
            "hook": "hook-am-accordion-default",
            "variables": [
                {
                    "variable": "accordion-item-border-color",
                    "name": "边框颜色",
                    "default": "rgba(0, 0, 0, 0.05)",
                    "used": [
                        {
                            "selector": ".am-accordion-item",
