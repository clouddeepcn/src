{{#this}}
<div class="am am-toolbar {{#if theme}}am-toolbar-{{theme}}{{/if}}{{#if className}} {{className}}{{/if}}" id="{{id}}">
  {{#if content.left}}
    <div class="am-toolbar-left">
      {{{content.left}}}
    </div>
  {{/if}}
  {{#if content.title}}
    <h2 class="am-toolbar-title">
      {{{content.title}}}
    </h2>
  {{/if}}
  {{#if content.right}}
    <div class="am-toolbar-right">
      {{{content.right}}}
    </div>
  {{/if}}
</div>
{{/this}}